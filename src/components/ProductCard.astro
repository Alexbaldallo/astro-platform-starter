---
// Props de cada producto
export interface Props {
    name: string;
    brand: string;
    currentPrice: number;
    originalPrice: number;
    discount: number;
    features: string[];
    bestseller?: boolean;
    affiliateLink?: string;
    image: string;
}

const { name, brand, currentPrice, originalPrice, discount, features, bestseller = false, affiliateLink = '#', image } = Astro.props;
---

<div class="product-card">
    <div class="product-image">
        {bestseller && <div class="bestseller-badge">MÁS VENDIDO</div>}
        <img src={image} alt={name} class="watch-img" />
    </div>

    <div class="product-info">
        <h3 class="product-name">{name}</h3>
        <p class="product-brand">{brand}</p>

        <div class="product-price">
            <span class="price-current">{currentPrice}€</span>
            <span class="price-original">{originalPrice}€</span>
            <span class="discount">-{discount}%</span>
        </div>

        <ul class="product-features">
            {features.map((feature) => <li>{feature}</li>)}
        </ul>

        <button class="buy-button" onclick={`window.open('${affiliateLink}', '_blank')`}>
            <i class="fas fa-shopping-cart"></i> Comprar Ahora
        </button>
    </div>
</div>

<style>
    .product-card {
        background: var(--glass-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .product-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        border-color: rgba(255, 215, 0, 0.3);
    }

    .product-image {
        width: 100%;
        height: 250px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        background: #f8f8f8;
    }

    .watch-img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Ajusta la imagen al cuadro sin dejar huecos */
        z-index: 1;
    }

    .bestseller-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        background: var(--secondary-gradient);
        color: #000;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 700;
        z-index: 2;
    }

    .product-info {
        padding: 1.5rem;
    }

    .product-name {
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: var(--text-primary);
    }

    .product-brand {
        color: var(--text-secondary);
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }

    .product-price {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1rem;
        flex-wrap: wrap;
    }

    .price-current {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--accent-gold);
    }

    .price-original {
        text-decoration: line-through;
        color: var(--text-muted);
        font-size: 1.1rem;
    }

    .discount {
        background: var(--secondary-gradient);
        color: #000;
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 700;
    }

    .product-features {
        list-style: none;
        margin-bottom: 1.5rem;
    }

    .product-features li {
        padding: 0.3rem 0;
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .product-features li::before {
        content: '✓';
        color: var(--accent-gold);
        font-weight: bold;
        margin-right: 0.5rem;
    }

    .buy-button {
        width: 100%;
        padding: 1rem;
        background: var(--secondary-gradient);
        color: #000;
        border: none;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(255, 107, 53, 0.3);
    }

    .buy-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(255, 107, 53, 0.4);
    }
</style>
